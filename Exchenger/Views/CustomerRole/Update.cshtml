@model Exchenger.Models.CustomerRole

<!DOCTYPE html>
<html>
<head>
	<title>Изменение роли</title>
	<meta charset="utf-8" />
</head>

<body>
	<h1>Изменение роли</h1>
	<div>
		<form asp-action="Update">
			<input type="hidden" asp-for="RoleId" />

			<label>Название</label>
			<input asp-for="RoleName" value="@Model.RoleName" />

			<input type="submit" value="Сохранить" />
		</form>
	</div>

	<div>
		@if (ViewBag.Resalt == 1)
		{
			<p>Данные успешно изменены!</p>
		}
		else if (ViewBag.Resalt == 0)
		{
			<p>Данные введены неверно!</p>
		}
	</div>

	<div>
		<a asp-action="ShowTable">Назад к списку</a>
	</div>
</body>
</html>

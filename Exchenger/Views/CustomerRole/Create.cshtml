@model Exchenger.Models.CustomerRole

<!DOCTYPE html>
<html>
<head>
	<title>Создание роли для пользователей</title>
	<meta charset="utf-8" />
</head>

<body>
	<h1>Добавление новой роли</h1>
	<div>
		<form asp-action="Create">
			<label>Название</label>
			<input asp-for="RoleName"/>
			<input type="submit" value="Сохранить" />
		</form>
	</div>

	<div>
		@if (ViewBag.Resalt == 1)
		{
			<p>Данные успешно добавлены!</p>
		}
		else if (ViewBag.Resalt == 0)
		{
			<p>Данные введены неверно!</p>
		}
	</div>
	<div>
		<a asp-action="ShowTable">Назад к списку</a>
	</div>
</body>

</html>

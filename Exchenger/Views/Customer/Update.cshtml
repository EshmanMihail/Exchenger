@model Exchenger.Models.Customer

<!DOCTYPE html>
<html>
<head>
	<title>Редактирование пользователя</title>
	<meta charset="utf-8" />
</head>

<body>
	<h1>Редактирование пользователя</h1>
	<div>
		<form asp-action="Update">
			<label>Имя</label>
			<input asp-for="FirstName" value="@Model.FirstName"/>

			<label>Фамилия</label>
			<input asp-for="LastName" value="@Model.LastName"/>

			<label>Роль</label>
			<select asp-for="RoleId" asp-items="ViewBag.RoleId"></select>

			<label>Email</label>
			<input asp-for="Email" value="@Model.Email"/>

			<label>Номер телефона</label>
			<input asp-for="PhoneNumber" value="@Model.PhoneNumber"/>

			<input type="submit" value="Сохранить" />
		</form>
	</div>

	<div>
		@if (ViewBag.Resalt == 1)
		{
			<p>Данные успешно изменены!</p>
		}
		else if (ViewBag.Resalt == 0)
		{
			<p>Данные введены неверно!</p>
		}
	</div>

	<div>
		<a asp-action="ShowTable">Назад к списку</a>
	</div>
</body>
</html>
